{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",                
                "/openmp",
                "${file}",
                "-I", "C:\\Program Files\\opencv\\build\\include",
                "/link", 
                "/libpath:C:\\Program Files\\opencv\\build\\x64\\vc16\\lib",
                "opencv_world4120.lib",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "CUDA: nvcc build active file",
            "command": "nvcc",
            "args": [
                "-g",              // отладочная информация для хоста
                "-G",              // отладочная информация для устройства
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-allow-unsupported-compiler",
                "${file}",
                "-I", "C:\\Program Files\\opencv\\build\\include",
                "-L", "C:\\Program Files\\opencv\\build\\x64\\vc16\\lib",
                "-l", "opencv_world4120",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Task generated for CUDA."
        }
    ],
    "version": "2.0.0"
}